@model ProjectZ.Models.Account.ChangePassword
@{
    ViewBag.Title = "ChangePassword";
}

<h2>ChangePassword</h2>
<form method="post" action="/Account/ChangePassword" >
    @ViewBag.Msg
    <div class="form-group">
        <input class="form-control" type="password" name="OldPassword" placeholder="ძველი პაროლი" />
        @Html.ValidationMessageFor(model => model.OldPassword, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        <input class="form-control" type="password" name="NewPassword" placeholder="ახალი პაროლი" />
        @Html.ValidationMessageFor(model => model.NewPassword, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        <input class="form-control" type="password" name="RepeatNewPassword" placeholder="გაიმეორეთ პაროლი" />
        @Html.ValidationMessageFor(model => model.RepeatNewPassword, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        <input class="form-control btn-success" type="submit" value="პაროლის შეცვლა" />
    </div>
</form>
