@model ProjectZ.Models.Account.Login
@{
    ViewBag.Title = "შესვლა";
}

<h2 class="loginform">სისტემაში შესვლა</h2>

<form action="/Account/Login" method="post" class="form-sizes">
    <div class="form-group">
        <input class="form-control" type="text" name="Email" placeholder="ელ. ფოსტა" />
        <p style="color:red">@ViewBag.errorLoginMessage</p>
        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        <input class="form-control" type="password" name="Password" placeholder="პაროლი" />
        <p style="color:red">@ViewBag.errorPasswordMessage</p>
        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        <input type="checkbox" name="RememberMe" value="true" /> დამახსოვრება<br />
    </div>
    <div class="form-group ">
        <input class="form-control btn btn-success formbutton" type="submit" value="შესვლა" />
    </div>
    @ViewBag.errorMessage
    <button class="signup-btn" type="submit" onclick="document.location='@Url.Action("SignUp","Account")'" style="width:200px;">რეგისტრაცია</button>
</form>